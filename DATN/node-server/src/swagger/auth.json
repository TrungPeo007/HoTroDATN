{
  "paths": {
    "/api/dang-nhap": {
      "post": {
        "summary": "Đăng nhập người dùng",
        "tags": ["Auth"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "tai_khoan": { "type": "string", "example": "user1" },
                  "mat_khau": { "type": "string", "example": "123456" }
                },
                "required": ["tai_khoan", "mat_khau"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Đăng nhập thành công",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "thong_bao": { "type": "string", "example": "Đăng nhập thành công" },
                    "token": { "type": "string", "example": "eyJhbGciOi..." },
                    "user": {
                      "type": "object",
                      "properties": {
                        "ho_ten": { "type": "string", "example": "Nguyen Van A" },
                        "tai_khoan": { "type": "string", "example": "user1" }
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Thiếu dữ liệu  hoặc sai định dạng nhập vào",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "thong_bao": { "type": "string", "example": "Thiếu thông tin" }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Sai mật khẩu",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "thong_bao": { "type": "string", "example": "Sai mật khẩu" }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Tài khoản không tồn tại",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "thong_bao": { "type": "string", "example": "Tài khoản không tồn tại" }
                  }
                }
              }
            }
          },
          "423": {
            "description": "Tài khoản bị khóa sẵng hoặc khóa do sai mk hoặc chưa xác thực email",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "thong_bao": { "type": "string", "example": "Tài khoản bị khóa hoặc chưa xác thực email" }
                  }
                }
              }
            }
          },
          "500": {
            "description": "lỗi do server",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "thong_bao": { "type": "string", "example": "lỗi do serve" }
                  }
                }
              }
            }
          }
        }
      }
    }

  }
}
